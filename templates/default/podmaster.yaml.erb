apiVersion: v1
kind: Pod
metadata:
  name: scheduler-master
spec:
  hostNetwork: true
  containers:
  - name: scheduler-elector
    image: <%= @podmaster_image %>
    command:
    - /podmaster
<% if node['kubernetes']['secure']['enabled'] == 'true' -%>
    - --etcd-servers==https://127.0.0.1:<%= @kubernetes_secure_api_port %>
<% end -%>
<% if node['kubernetes']['secure']['enabled'] == 'true' -%>
    - --etcd-servers=http://127.0.0.1:<%= @kubernetes_api_port %>
<% end -%>
    - --key=scheduler
    - --source-file=/kubernetes/kube-scheduler.manifest
    - --dest-file=/manifests/kube-scheduler.manifest
    volumeMounts:
    - mountPath: /kubernetes
      name: kubernetes
      readOnly: true
    - mountPath: /manifests
      name: manifests
  - name: controller-manager-elector
    image: <%= @podmaster_image %>
    command:
    - /podmaster
<% if node['kubernetes']['secure']['enabled'] == 'true' -%>
    - --etcd-servers==https://127.0.0.1:<%= @kubernetes_secure_api_port %>
<% end -%>
<% if node['kubernetes']['secure']['enabled'] == 'true' -%>
    - --etcd-servers=http://127.0.0.1:<%= @kubernetes_api_port %>
<% end -%>
    - --key=controller
    - --source-file=/kubernetes/kube-controller-manager.manifest
    - --dest-file=/manifests/kube-controller-manager.manifest
    terminationMessagePath: /dev/termination-log
    volumeMounts:
    - mountPath: /kubernetes
      name: kubernetes
      readOnly: true
    - mountPath: /manifests
      name: manifests
  volumes:
  - hostPath:
      path: /etc/kubernetes
    name: kubernetes
  - hostPath:
      path: /etc/kuberketes/manifests
    name: manifests
